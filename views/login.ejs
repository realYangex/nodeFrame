<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, initial-scale=1.0, user-scalable=no">
        <title>供销交流平台</title>
        <!-- 引入 FrozenUI -->
        <link rel="stylesheet" href="http://i.gtimg.cn/vipstyle/frozenui/2.0.0/css/frozen.css"/>
        <link rel="stylesheet" href="/public/css/font-awesome.min.css"/>
        <script type="text/javascript" src="/public/js/jquery.js"></script>
        <script type="text/javascript" src="/public/js/common.js"></script>
    </head>
    <body>
        <header class="ui-header ui-header-positive ui-border-b">
            <i class="ui-icon-return" onclick="javascript:window.location.href='/'"></i><h1>个人登录</h1> 
        </header>
                
            <section class="ui-container">
                <div class="ui-form ui-border-t">
                    <form action="">
                        <div class="ui-form-item ui-border-b" style="margin-top:20px;">
                            <label>
                            <span class=" fa fa-user"></span>
                                用户名:
                            </label>
                            <input type="text" placeholder="请输入用户名" name="username">
                            <a href="#" class="ui-icon-close">
                            </a>
                        </div>
                        <div class="ui-form-item ui-border-b">
                            <label>
                            <span class=" fa fa-unlock-alt"></span>
                                密 &nbsp; 码：
                            </label>
                            <input type="password" placeholder="请输入密码" name="password">
                            <a href="#" class="ui-icon-close">
                            </a>
                        </div>
                        <div class="ui-btn-wrap">
                            <button class="ui-btn-lg ui-btn-danger" type="button" id="login">
                                登录
                            </button>
                        </div>
                        <div class="ui-btn-wrap" style="padding-top:0">
                            <button class="ui-btn-lg ui-btn-primary" type="button" id="register">
                                注册
                            </button>
                        </div>
                    </form>
                </div>
                <center>
                    <div style="margin:20px 0;">
                         <p><a href="/">返回</a> |关于我们</p>
                         <span>©2018 All Rights Reserved</span>

                    </div>
                </center>
            </section>
	         <!-- 提示框 -->
            <div id="showTip">
                    <!-- <div class="ui-dialog show">
                        <div class="ui-dialog-cnt">
                            <div class="ui-dialog-bd">
                                 <p>您还没有登录，请先登录</p>
                            </div>
                            <div class="ui-dialog-ft">
                                <button type="button" data-role="button" id="loginBtn">立即登录</button>
                                <button type="button" data-role="button" id="cancelBtn">取消</button>
                            </div>
                        </div> 
                    </div>  -->
            </div>

    </body>
    <script type="text/javascript">
    	$(function(){
            $("#login").click(function(){
                var username = $("input[name='username']").val();
                var password = $("input[name='password']").val();
                if(username==""||password=="")
                {
                    var html = '<div class="ui-dialog show">\
                        <div class="ui-dialog-cnt">\
                            <div class="ui-dialog-bd">\
                                 <p>用户名和密码不能为空</p>\
                            </div>\
                            <div class="ui-dialog-ft">\
                                <button type="button" data-role="button" class="close">确定</button>\
                            </div>\
                        </div> \
                    </div> '
                    $("#showTip").html(html);
                    return;
                }

                 $.ajax({
                    url:'/person/login',
                    data:{username:username,password:password},
                    type:'post',
                    success:function(data){
                    if(data=="0"){
                    flag = false;
                    var html = '<div class="ui-dialog show">\
                        <div class="ui-dialog-cnt">\
                            <div class="ui-dialog-bd">\
                                 <p>用户名和密码不正确</p>\
                            </div>\
                            <div class="ui-dialog-ft">\
                                <button type="button" data-role="button" class="close">确定</button>\
                            </div>\
                        </div> \
                    </div> '
                    $("#showTip").html(html)
                    }else{
                        window.location.href = "/person";
                    }
                }
                     
                });


            })

            //注册按钮点击事件
    		$("#register").click(function(){
    			window.location.href = "/person/register";
    		})	
    			
    		// 注册按钮点击事件
    		$(document).on("click",'#loginBtn',function(){
    			window.location.href = "/person/loginpage";
    		})

    		// 按钮点击关闭
    		$(document).on("click",'#cancelBtn',function(){
    			window.location.href = "/";
    		})

            // 取消按钮点击事件
            $(document).on("click",'.close',function(){
                $("#showTip").html("");
            })
    	})
    </script>
</html>